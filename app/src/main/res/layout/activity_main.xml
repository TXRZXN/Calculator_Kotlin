<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Solution"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/dark"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/mod"
                android:text="%" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/dark"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/sin"
                android:text="sin" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/dark"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/cos"
                android:text="cos" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/dark"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/tan"
                android:text="tan" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/dark"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/Clear"
                android:text="CE" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/dark"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/open"
                android:text="(" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/dark"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/close"
                android:text=")" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/dark"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/divide"
                android:text="/" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/num7"
                android:text="7" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/num8"
                android:text="8" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/num9"
                android:text="9" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/dark"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/multiply"
                android:text="*" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/num4"
                android:text="4" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/num5"
                android:text="5" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/num6"
                android:text="6" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/dark"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/minus"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/num1"
                android:text="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/num2"
                android:text="2" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/num3"
                android:text="3" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/dark"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/plus"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/dot"
                android:text="." />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/num0"
                android:text="0" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/Delete"
                android:text="del" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/red"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="0.5dp"
                android:id="@+id/equal"
                android:text="=" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>